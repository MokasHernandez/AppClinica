<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Mantenimientos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalScrollbarPosition="left"
        tools:layout_editor_absoluteX="-75dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CTL2"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:background="@color/Constrain">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/montserratlight"
                android:text="Registrar Mantenimiento"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="60dp"
                android:fontFamily="@font/montserratlight"
                android:gravity="center_horizontal"
                android:text="Tipo Mantenimiento :"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />


            <CheckBox
                android:id="@+id/CheckPre"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/table"
                android:fontFamily="@font/montserratlight"
                android:text="Preventivo"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <CheckBox
                android:id="@+id/CheckCo"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/table"
                android:fontFamily="@font/montserratlight"
                android:text="Correctivo"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/BTNADD"
                android:layout_width="196dp"
                android:layout_height="51dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/btn_uno"
                android:backgroundTint="@color/boton"
                android:textColor="@color/icons"
                android:fontFamily="@font/montserratlight"
                android:text="Registrar"
                android:textAlignment="center"

                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EDTFECHA" />

            <EditText
                android:id="@+id/EDTFECHA"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/txt"
                android:ems="10"
                android:focusable="false"
                android:fontFamily="@font/montserratlight"
                android:gravity="center|center_horizontal"
                android:hint="yy/mm/dd"
                android:inputType="date"
                android:padding="1px"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/montserratlight"
                android:gravity="center_horizontal"
                android:text="Empresa :"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CheckCo" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/montserratlight"
                android:gravity="center_horizontal"
                android:text="Fecha :"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/EDTEMPRESA"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/txt"
                android:ems="10"
                android:fontFamily="@font/montserratlight"
                android:gravity="center|center_horizontal"
                android:hint="Empresa"
                android:padding="1px"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>