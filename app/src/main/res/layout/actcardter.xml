<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewERR"
        style="@style/CardView.Light"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/txt"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"

            android:background="@drawable/btn_uno"
            android:paddingBottom="12dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/CIMAGE"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"

                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="220dp"
                android:layout_marginRight="220dp"
                android:elevation="12dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/htdslogo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/TXTNON2"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginEnd="60dp"
                android:fontFamily="@font/montserratlight"
                android:gravity="center"
                android:padding="0px"
                android:text="Nombre:"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/montserratlight"
                app:layout_constraintBottom_toTopOf="@+id/TXT22"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/CIMAGE"
                app:layout_constraintTop_toTopOf="@+id/CIMAGE" />

            <TextView
                android:id="@+id/TXT22"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:fontFamily="@font/montserratlight"
                android:gravity="center"
                android:padding="0px"
                android:text="Tipo:"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold|italic"
                app:fontFamily="@font/montserratlight"
                app:layout_constraintBottom_toBottomOf="@+id/CIMAGE"
                app:layout_constraintEnd_toEndOf="@+id/TXTNON2"
                app:layout_constraintStart_toStartOf="@+id/TXTNON2"
                app:layout_constraintTop_toBottomOf="@+id/TXTNON2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>